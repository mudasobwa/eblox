<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="<%= @description %>">
    <meta name="author" content="<%= @author %>">

    <title><%= @title %></title>

    <!-- fonts -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Arsenal:400,700|Roboto:400,700|Marmelad|Yanone+Kaffeesatz:400,700&amp;subset=cyrillic,latin-ext" rel="stylesheet">

    <link rel="prev" title="<%= @prev_title %>" href="<%= @content.nav.prev %>">
    <link rel="next" title="<%= @next_title %>" href="<%= @content.nav.next %>">

    <!-- wc -->
    <script type="text/javascript" src="<%= static_path(@conn, "/wc/webcomponentsjs/webcomponents-lite.min.js") %>"></script>
    <!--link rel="import" href="<%= static_path(@conn, "/wc/leaflet-map/leaflet-map.html") %>"-->

    <!--link rel="stylesheet" type="text/css" href="../src/assets/spn.css">
    <script type="text/javascript" src="../src/js/spn.js"></script -->

    <link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">
  </head>

  <body>
    <nav class="teal darken-4" role="navigation">
      <div class="nav-wrapper container">
        <a id="logo-container" href="mailto:am@mudasobwa.ru">
          <img src="/images/avatar.jpg" alt="Aleksei “mudasobwa” Matiushkin" class="circle responsive-img brand-logo">
        </a>
        <ul class="right hide-on-med-and-down">
          <li><a href="#">Navbar Link</a></li>
        </ul>

        <ul id="nav-mobile" class="side-nav">
          <li><a href="#">Navbar Link</a></li>
        </ul>
        <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
      </div>
    </nav>

    <!--leaflet-map style="height:200px;" latitude="51.505" longitude="-0.09" zoom="13"></leaflet-map-->

    <div class="container">
      <div class="section">
        <!-- Use element -->
        <!--google-map latitude="37.790" longitude="-122.390"></google-map-->

        <%= if get_flash(@conn, :info) do %>
          <p class="alert alert-info" role="alert"><%= get_flash(@conn, :info) %></p>
        <% end %>
        <%= if get_flash(@conn, :error) do %>
          <p class="alert alert-danger" role="alert"><%= get_flash(@conn, :error) %></p>
        <% end %>
      </div>
    </div>

    <div class="container">
      <div class="section">
        <div class="row">
          <div class="col s12 m12">
            <main role="main">
              <%= render @view_module, @view_template, assigns %>
            </main>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="section">

        <!--   Icon Section   -->
        <div class="row">
          <%= for thumbnail <- @thumbnails do %>
            <div class="col s12 m4">
              <div class="icon-block">
                <h2 class="center teal-text darken-4"><i class="material-icons">flash_on</i></h2>
                <h5 class="center"><a href="<%= thumbnail.nav.this %>"><%= thumbnail.title %></a></h5>
                <div class="thumbnail-container overflow-hidden">
                    <div class="thumbnail-contents">
                      <%= raw thumbnail.preview_html %>
                    </div>
                    <div class="thumbnail-gradient">
                    </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

      </div>
    </div>

